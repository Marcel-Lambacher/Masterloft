# /etc/wireguard/wg0.conf
[Interface]
Address = 10.222.0.1
ListenPort = 51871
PrivateKey = {{ wireguard_cloud_private_key }}
MTU = 1420

PostUp = ip -4 route add 10.222.0.0/24 dev wg0
PostDown = ip -4 route del 10.222.0.0/24

[Peer]
PublicKey = {{ wireguard_local_public_key }}
AllowedIPs = 10.222.0.101/32