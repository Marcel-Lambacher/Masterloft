apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
  - sealed-digitalocean-token-secret.json
  - https://github.com/cert-manager/cert-manager/releases/download/{{ cert_manager_version }}/cert-manager.yaml
  - issuer-letsencrypt-prod.yaml
  - cloud-lambacher-eu-tls.yaml
  - traefik-dynamic-config-map.yaml
  - traefik-config.yaml

patches:
  - target:
      kind: (StatefulSet|Deployment|Job|Pod)
    patch: |-
      kind: not-important
      metadata:
        name: not-important
      spec:
        template:
          spec:
            tolerations:
            - key: "cloud.lambacher.eu/location"
              value: "onpremise"
              operator: "Equal"
              effect: "NoSchedule"

            affinity:
              nodeAffinity:
                requiredDuringSchedulingIgnoredDuringExecution:
                  nodeSelectorTerms:
                  - matchExpressions:
                    - key: cloud.lambacher.eu/location
                      operator: In
                      values:
                      - onpremise