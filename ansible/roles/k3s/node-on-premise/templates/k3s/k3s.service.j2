[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
After=network.target
[Service]
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
ExecStart=/usr/local/bin/k3s agent --node-ip 10.222.0.101 --flannel-iface=wg0 --node-name=k8s-onpremise-01 --token {{ hostvars[groups['masterloft-node-cloud'][0]].masterNodeToken }} --server https://10.222.0.1:6443 
KillMode=process
Delegate=yes
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
[Install]
WantedBy=multi-user.target