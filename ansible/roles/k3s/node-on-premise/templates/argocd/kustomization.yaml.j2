apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - namespace.yaml
  - sealed-initial-admin-secret.yaml
  - https://raw.githubusercontent.com/argoproj/argo-cd/{{ argocd_version }}/manifests/install.yaml
  - ingress.yaml
  - bootstrap-app.yaml

patches:
  - path: argocd-cmd-params-cm-patch.yaml
    target:
      kind: ConfigMap
      name: argocd-cmd-params-cm
  - path: argocd-cm-patch.yaml
    target:
      kind: ConfigMap
      name: argocd-cm
  - target:
      kind: (StatefulSet|Deployment|Job|Pod)
    patch: |-
      kind: not-important
      metadata:
        name: not-important
      spec:
        template:
          spec:
            tolerations:
            - key: "cloud.lambacher.eu/location"
              value: "onpremise"
              operator: "Equal"
              effect: "NoSchedule"

            affinity:
              nodeAffinity:
                requiredDuringSchedulingIgnoredDuringExecution:
                  nodeSelectorTerms:
                  - matchExpressions:
                    - key: cloud.lambacher.eu/location
                      operator: In
                      values:
                      - onpremise

namespace: argocd