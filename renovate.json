{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "pulumi/",
    "deprecated-fluxcd/"
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/|\\.|.*)vars$"],
      "matchStrings": ["version: (?<currentValue>.*) # renovate: depName=(?<depName>.*)$"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
